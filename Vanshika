  </div>  <script>
    // copy page link
    document.getElementById('copyBtn').addEventListener('click', function(){
      const url = location.href.split('?')[0];
      navigator.clipboard.writeText(url).then(()=>{
        alert('Link copied! You can share this page without tokens.');
      });
    });

    // Allow quick name replacement via query param ?name=
    (function(){
      const params = new URLSearchParams(location.search);
      const name = params.get('name');
      if(name){
        document.querySelector('h1').textContent = name;
        document.querySelector('.avatar').textContent = name.charAt(0).toUpperCase();
        document.querySelector('.lead').textContent = 'Hi — I\'m ' + name + '. Welcome to my little corner of the web.';
        document.querySelector('footer strong').textContent = name;
        document.getElementById('emailText').textContent = name.toLowerCase().replace(/\s+/g,'') + '@example.com';
      }
    })();
  </script></body>
